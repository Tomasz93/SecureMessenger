<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="${packageName}.${activityClass}" >
    
    <LinearLayout
	    android:id="@+id/peersLoadLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/peersLoadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/peers_load"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
	    android:id="@+id/peersListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:visibility="gone">
        
        <ListView
	        android:id="@+id/peersListView"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.9" >
	    </ListView>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.1">
	        <Button
	            android:id="@+id/peersRefreshButton"
	            android:layout_width="0dp"
	            android:layout_weight="0.5"
	            android:layout_height="match_parent"
	            android:text="Refresh" />
	
	        <Button
	            android:id="@+id/peersExitButton"
	            android:layout_width="0dp"
	            android:layout_weight="0.5"
	            android:layout_height="match_parent"
	            android:text="Exit" />
	    </LinearLayout>
    </LinearLayout>
</merge>
